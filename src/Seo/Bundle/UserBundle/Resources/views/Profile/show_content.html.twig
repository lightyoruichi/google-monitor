<h1 class="page-header">Profile</h1>

<table class="table table-striped">
    <tr>
        <th>
            {{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}
        </th>
        <td>
            {{ user.username }}
        </td>
    </tr>
    <tr>
        <th>
            {{ 'profile.show.firstName'|trans({}, 'FOSUserBundle') }}
        </th>
        <td>
            {{ user.firstName }}
        </td>
    </tr>
    <tr>
        <th>
            {{ 'profile.show.lastName'|trans({}, 'FOSUserBundle') }}
        </th>
        <td>
            {{ user.lastName }}
        </td>
    </tr>
    <tr>
        <th>
            {{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}
        </th>
        <td>
            {{ user.email }}
        </td>
    </tr>
</table>

<div class="form-actions">
    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary">
        {{ 'profile.show.edit'|trans }}
    </a>
</div>